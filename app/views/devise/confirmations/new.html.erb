<% provide(:title, '重发确认邮件') %>

<div class="subtitle">
  <h3>重新发送邮箱确认邮件</h3>
</div>

<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
  <%= render 'shared/error_messages', target: resource %>

  <div class="form-group">
    <%= f.email_field :email, placeholder: '邮箱', value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: 'form-control' %>
  </div>

  <div class="form-actions">
    <%= f.submit "重发确认邮件", class: 'btn btn-primary btn-lg btn-block' %>
  </div>
<% end %>

<%= render 'devise/shared/sign_buttons' %>
