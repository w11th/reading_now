<% provide(:title, '个人中心') %>

<div class="col-sm-6 col-sm-offset-3">
  <h3>修改个人信息</h3>
  <%= form_for(resource, as: resource_name, url: '#', html: { method: :put }) do |f| %>
    <div class="form-group">
      <%= f.label :nickname, '昵称' %>
      <%= f.text_field :nickname, placeholder: '昵称', class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :avatar, '头像' %>
      <%= f.file_field :avatar %>
    </div>

    <div class="form-group">
      <%= f.label :intro, '简介' %>
      <%= f.text_area :intro, class: 'form-control' %>
    </div>

    <div class="form-actions">
      <%= f.submit '更新个人信息', class: 'btn btn-primary btn-lg btn-block' %>
    </div>
  <% end %>
  <hr/>
  <h3>修改帐号信息</h3>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render 'shared/error_messages', target: resource %>

    <div class="form-group">
      <%= f.label :email, '邮箱' %>
      <%= f.email_field :email, autofocus: true, placeholder: '邮箱', class: 'form-control' %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p class="help-block">待确认的邮箱: <%= resource.unconfirmed_email %></p>
    <% end %>

    <div class="form-group">
      <%= f.label :password, '新密码' %> <i>(如果你不想修改密码就留空)</i><br />
      <%= f.password_field :password, autocomplete: "off", placeholder: '密码', class: 'form-control' %>
      <% if @minimum_password_length %>
        <p class="help-block">（密码长度至少 <%= @minimum_password_length %> 位）</p>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, '确认新密码' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: '密码确认', class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :current_password, '当前密码' %> <i>(修改账户信息需要确认当前密码)</i><br />
      <%= f.password_field :current_password, autocomplete: "off", placeholder: '密码确认', class: 'form-control' %>
    </div>

    <div class="form-actions">
      <%= f.submit "更新账户信息", class: 'btn btn-primary btn-lg btn-block' %>
    </div>
  <% end %>

  <hr/>

  <h3>删除帐号</h3>

  <p>你确定吗? </p>
  <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete , class: 'btn btn-danger btn-lg btn-block' %>
</div>
