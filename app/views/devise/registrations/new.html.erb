<% provide(:title, '注册') %>

<div class="navs">
  <%= link_to('登录', new_user_session_path, controller_name == 'sessions' ? { class: 'active' } : {}) %>
  <%= link_to('注册', new_user_registration_path, controller_name == 'registrations' ? { class: 'active' } : {}) %>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "shared/error_messages", target: resource %>

  <div class="form-group">
    <%= f.email_field :email, placeholder: '邮箱', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, autocomplete: 'off', placeholder: '密码', class: 'form-control' %>
    <% if @minimum_password_length %>
    <p class="help-block">（密码长度至少 <%= @minimum_password_length %> 位）</p>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: '密码确认', class: 'form-control' %>
  </div>

  <%= omniauth_data_tag '注册' %>

  <div class="from-actions">
    <%= f.submit '注册', class: 'btn btn-primary btn-lg btn-block', 'data-disable-with' => '提交中' %>
  </div>
<% end %>
