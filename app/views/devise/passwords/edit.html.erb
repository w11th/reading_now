<% provide(:title, '重置密码') %>

<div class="subtitle">
  <h3>设置新的密码</h3>
</div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "shared/error_messages", target: resource %>

  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <%= f.password_field :password, autocomplete: 'off', placeholder: '新密码', class: 'form-control' %>
    <% if @minimum_password_length %>
      <p class="help-block">（密码长度至少 <%= @minimum_password_length %> 位）</p>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: '确认新密码', class: 'form-control' %>
  </div>

  <div class="from-actions">
    <%= f.submit '修改密码', class: 'btn btn-primary btn-lg btn-block', 'data-disable-with' => '提交中' %>
  </div>
<% end %>

<%= render 'devise/shared/sign_buttons' %>
